#	0.0095       0.02338    # Q = (0.0095, -0.0095, 0.02338)
#	-0.0095      0.02338    # Q = (-0.0095, 0.0095, 0.02338)
#	-0.019       0          # Q = (-0.019, 0.019, 0)
#	0.0095       -0.02338   # Q = (0.0095, -0.0095, -0.02338)
#	-0.0095      -0.02338   # Q = (-0.0095, 0.0095, -0.02338)
#e


# heli peaks
splot \
	"-" u ($1):($2):(0) w p pt 7 ps size_bragg lc rgb col_bragg, \
	"-" u (1+$1):($2):(0) w p pt 7 ps size_sat lc rgb col_sat
	1            0          # Bragg peak: G = (1, 1, 0)
e
	0.019        0          # Q = (0.019, 0.019, 0)
	-0.019       0          # Q = (-0.019, -0.019, 0)
e


#
# skx sats: ang = 0/180*pi; [0, 0, 0.027]*sin(ang) + [0.019, -0.019, 0]*cos(ang)
# scan pos: ang = 0/180*pi; 0.04*[1, 1, 0]*cos(ang) + 0.04*[1, -1, 0]*sin(ang)
#
